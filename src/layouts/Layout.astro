---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="top-header container">
				<img src="https://http2.mlstatic.com/frontend-assets/ml-web-navigation/ui-navigation/6.6.73/mercadolibre/logo_large_25years_v2.png" alt="Logo ML">
				<div class="input">
				<input type="text" placeholder="Busca productos, marcas y mÃ¡s...">
				<button><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQTt2Mj8dwtrYLcbqDn-nDazo9p_uU7lQ8phQ&s" alt=""></button>
				</div>
				<p>Publicidad</p>	
			</div>
		</header>
		<div class="banner">

		</div>
		<div class="cards container ">
			<div class="card">
				1
			</div>
			<div class="card">
				2
			</div>
			<div class="card">
				3
			</div>
			<div class="card">
				4
			</div>
			<div class="card">
				5
			</div>
			<div class="card">
				6
			</div>
		</div>
		<!-- <slot /> -->
	</body>
</html>
<style>
	html, body{
		padding: 0;
		margin: 0;
		background-color: #969393;
	}
	header{
		height: 80px;
		background: #ecde1a;
		padding-top: 12px;
	}
	header img{
		width: 120px;
	}
	header input{
		box-sizing: border-box;
		display: inline-block;
		width: 85%;
		padding: 10px 8px;
		border-top-left-radius: 3px;
		border-bottom-left-radius: 3px;
		border: none;
		height: 36px;
		/* border: 1px solid #969393; */
		outline: none;
	}
	header button{
		display: inline-block;
		width: 14%;
		border: none;
		background: #fff;
		height: 36px;
		border-top-right-radius:3px;
		border-bottom-right-radius: 3px;
	}
	header button img{
		width: 80%;
	}
	.input {
		display: flex;
		align-items: center;
	}
	.banner{
		height: 280px;
		background: linear-gradient(to bottom,#ecde1a 60%,#969393 100%);
	}
	.container{
		max-width: 1200px;
		margin: 0 auto;
	}
	.cards{
		gap: 10px;
		display: flex;
		margin-top: -80px;
		height: 240px;
	}
	.card{
		flex-grow: 1;
		background-color: #fff;
		border-radius: 6px;
	}
	.top-header{
		column-count: 3;
	}

</style>
